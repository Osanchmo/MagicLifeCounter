<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a21753725a.constraitapp.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:id="@+id/sumVida"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp"
        android:textSize="36sp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/sumVen"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/oneLifeSteal" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:id="@+id/restVida"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/restVen"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/oneLifeSteal" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:id="@+id/secondSumVida"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp"
        android:textSize="36sp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/secondSumVen"
        android:rotation="180"
        app:layout_constraintBottom_toTopOf="@+id/twoLifeSteal" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:id="@+id/secondRestVida"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp"
        android:textSize="36sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/secondRestVen"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:rotation="180"
        app:layout_constraintBottom_toTopOf="@+id/twoLifeSteal" />

    <Button
        android:text="P-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restVen"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:text="P+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sumVen"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:text="P-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondRestVen"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:rotation="180"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="P+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondSumVen"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:rotation="180"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:text="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vida"
        app:layout_constraintRight_toLeftOf="@+id/sumVida"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/restVida"
        android:layout_marginLeft="8dp"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/ven"
        android:layout_marginBottom="32dp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/oneLifeSteal" />

    <TextView
        android:text="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondVida"
        android:textSize="60sp"
        android:rotation="180"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/secondPoison"
        android:textAlignment="center"
        app:layout_constraintRight_toLeftOf="@+id/secondRestVida"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/secondSumVida"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toTopOf="@+id/twoLifeSteal"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondPoison"
        android:textSize="36sp"
        app:layout_constraintRight_toLeftOf="@+id/secondRestVen"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/secondSumVen"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:rotation="180" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ven"
        android:textSize="36sp"
        app:layout_constraintRight_toLeftOf="@+id/sumVen"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/restVen"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp" />

    <ImageButton
        android:layout_width="348dp"
        app:srcCompat="@android:drawable/arrow_up_float"
        android:id="@+id/oneLifeSteal"
        android:rotation="180"
        android:layout_height="43dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="176dp" />

    <ImageButton
        android:layout_width="348dp"
        app:srcCompat="@android:drawable/arrow_up_float"
        android:id="@+id/twoLifeSteal"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="176dp"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
